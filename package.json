{
  "name": "tank-adventure",
  "version": "1.0.0",
  "description": "A complete 2D tank battle game designed for mobile and tablet devices with touch controls",
  "main": "index.html",
  "scripts": {
    "start": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:android": "bubblewrap build --skipPwaValidation",
    "build:android:release": "bubblewrap build --skipPwaValidation --signingKeyPath $KEYSTORE_PATH --signingKeyPassword $KEYSTORE_PASSWORD --signingKeyAlias $KEY_ALIAS",
    "build:android:pwa": "pwabuilder https://hoanganh25991.github.io/tank-adventure -p android -d ./build-output",
    "init:android": "bubblewrap init --manifest https://hoanganh25991.github.io/tank-adventure/manifest.json",
    "build:android:script": "./build-android.sh"
  },
  "keywords": [
    "pwa",
    "game",
    "tank",
    "mobile",
    "canvas",
    "javascript"
  ],
  "author": "Monk Journey Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@bubblewrap/cli": "^1.20.0",
    "pwabuilder": "^2.0.3"
  }
}